{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: configure (Ninja, Debug)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-G", "Ninja",
        "-B", "${workspaceFolder}/external/SPIRV-Tools/build",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "CMake: build (Debug)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build", "build",
        "--config", "Debug"
      ],
      "group": "build",
      "problemMatcher": []
    }
  ]
}